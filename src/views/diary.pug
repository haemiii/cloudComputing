doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet' , href="css/diary.css")
        title Document
    body 
        h1 My Diary
        div
            form(action="/diary/register" method="POST" enctype="multipart/form-data")
                input(placeholder="Photo", type="file", accept="image/*",name="photo", required)
                input(placeholder="Title", name="title", required)
                textarea(name="content", cols="100", rows="300")
                button(type="submit") 제출하기
